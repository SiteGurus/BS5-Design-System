{%- raw -%}
<li class="md:mr-2 lg:mr-0" role="presentation">
  <button class="p-4 w-full rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700" id="testimonial-{{forloop.index}}-tab" type="button" role="tab" aria-controls="testimonial-{{forloop.index}}" aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
    <figcaption class="space-y-2">
      <div class="flex space-x-2.5">
        {% if this['Image'] != blank %}
          <img class="w-6 h-6 rounded-full" src="{{this['Image'] | asset_url}}" alt="{{item.properties.name}}">
        {% endif %}
        <div class="text-lg font-semibold text-gray-900 dark:text-white">{{this['name']}}</div>
      </div>
      {% if this['Job Title'] != blank %}
        <div class="text-sm font-light text-left text-gray-500 dark:text-gray-400">{{this['Job Title']}} {% if this['Company Name'] != blank %}at {{this['Company Name']}}{% endif %}</div>
      {% endif %}
    </figcaption>
  </button>
</li>
{%- endraw -%}
{%- raw -%}
<aside aria-label="Sidebar">
  <div class="overflow-y-auto py-4 px-3 bg-gray-50 rounded dark:bg-gray-800 mb-4">
    <div class="mb-4">
      <h4 class="text-lg dark:text-light mb-2">Categories</h4>
      <div>
        {% for category in context.exports.categories.data %}
          {% if category[1].parent == blog_parent_category or blog_parent_category == blank %}
            <a class="bg-primary-100 hover:bg-primary-200 text-primary-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800 dark:hover:bg-primary-300" href="{{blog_list_page_url}}?category={{category[0]}}">{{category[1].name | replace: " ", "&nbsp;"}}</a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% capture archive_layout %}{{layout}}{% endcapture %}
    {%- include 'modules/siteglide_blog/get/get_blog_archive', archive_layout: archive_layout, archive_layout_type: "archive" -%}
    
    {% capture search %}layouts/modules/module_3/{{layout}}/search{% endcapture %}
    {%- include search -%}
    
  </div>
</aside>
{%- endraw -%}
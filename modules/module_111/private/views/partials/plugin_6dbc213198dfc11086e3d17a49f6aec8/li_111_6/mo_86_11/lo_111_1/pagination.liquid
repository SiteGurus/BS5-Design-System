{%- raw -%}

{% if previous_page != false %}
  {% assign previous_page = true %}
{% endif %}
{% if next_page != false %}
  {% assign next_page = true %}
{% endif %}


{%- if total_pages != 1 -%}
  <nav class="pb-8 flex justify-center" aria-label="Change Page">
    <ul class="inline-flex items-stretch -space-x-px">
      {% assign root_url = root_url | default: context.headers.PATH_INFO %}
      {% if context.device.device_type == "desktop" %}
        {% assign show = 6 %}
      {% elsif context.device.device_type == "tablet" %}
        {% assign show = 4 %}
      {% else %}
        {% assign show = 2 %}
      {% endif %}
      {% assign range_a = current_page | minus: show | at_least: 1 %}
      {% assign range_b = current_page | minus: 1 | at_least: 1 %}
      {% assign range_c = current_page | plus: 1 | at_most: total_pages %}
      {% assign range_d = current_page | plus: show | at_most: total_pages %}

      {% assign query_params = context.headers.QUERY_STRING | split: "&" %}
      {% assign new_query_params = "[]" | parse_json %}
      {% for param in query_params %}
        {% assign map = param | split: "=" %}
        {% unless map[0] == "page" %}
          {% assign new_query_params = new_query_params | add_to_array: param %}
        {% endunless %}
      {% endfor %}
      {% assign new_query_params = new_query_params | join: "&" %}
      {% if previous_page == true %}
        {% comment %} Previous Page {% endcomment %}
        <li class="flex items-center">
          <a class="block py-2 px-3 ml-0 leading-tight text-gray-500 bg-white rounded-l-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" href="{{root_url}}?{{new_query_params}}&page={{current_page | minus: 1 | at_least: 1 }}" title="First Page">
            <span class="sr-only">Previous</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        </li>
        {% comment %} Indicate More Pages Exist behind {% endcomment %}
        {% if range_a > 1 %}
          <li class="mx-1 flex items-center">
            <div class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" /></svg>
            </div>
          </li>
        {% endif %}
        {% comment %} Previous Pages {% endcomment %}
        {% for page_button in (range_a..range_b) %}
          {%- capture _path -%}{{root_url}}?{{new_query_params}}&page={{page_button}}{%- endcapture -%}
          <li class="flex items-center">
              <a class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"  href="{{_path}}" title="Page {{page_button}}">{{page_button}}</a>
          </li>
        {% endfor %}
      {% endif %}
      {% comment %} Current Page {% endcomment %}
      {%- capture _path -%}{{root_url}}?{{new_query_params}}&page={{current_page}}{%- endcapture -%}
      <li class="flex items-center">
          <a aria-current="page" class="z-10 py-2 px-3 leading-tight text-primary-600 bg-primary-50 border border-primary-300 hover:bg-primary-100 hover:text-primary-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white"  href="{{_path}}" title="Page {{current_page}}">{{current_page}} <span class="sr-only">(current page)</span></a>
      </li>
      {% comment %} Next Pages {% endcomment %}
      {% if next_page == true %}
        {% for page_button in (range_c..range_d) %}
          {%- capture _path -%}{{root_url}}?{{new_query_params}}&page={{page_button}}{%- endcapture -%}
          <li class="flex items-center">
              <a class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"  href="{{_path}}" title="Page {{page_button}}">{{page_button}}</a>
          </li>
        {% endfor %}
        {% comment %} Indicate More Pages Exist in front {% endcomment %}
        {% if range_d < total_pages %}
          <li class="flex items-center">
            <div class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" /></svg>
            </div>
          </li>
        {% endif %}
        {% comment %} Next Page {% endcomment %}
        <li class="flex items-center">
          <a class="block py-2 px-3 leading-tight text-gray-500 bg-white rounded-r-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" href="{{root_url}}?{{new_query_params}}&page={{current_page | plus: 1 | at_most: total_pages }}" title="Last Page">
            <span class="sr-only">Next</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{%- endif -%}
{%- endraw -%}
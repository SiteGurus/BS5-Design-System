{%- raw -%}
<fieldset class="checkbox-container {{validation}} col-12  mb-5">
  <legend class="col-form-label">{{label}}</legend>
  {% for option in options %}
    <div {{attributes}} class=" form-check form-switch mb-6 align-items-center">
      <input {{validation}}  {% if value contains option %}checked{% endif %} class="form-check-input" type="checkbox" name="{{name}}" id="{{name}}_{{option}}" value="{{option}}">
      <label class="form-check-label" for="{{name}}_{{option}}">{{option}}</label>
    </div>
  {% endfor %}
</fieldset>
{%- endraw -%}
{% raw %}
<div class="card sg-card border-0 mb-5">
	<div class="card-body p-0">
		<div class="row gx-0">
			<div class="col-md-{% if this.properties.module_field_12_8 %}8{% else -%}12{% endif %}">

				<div class="p-4">
					<h3 class="mb-3">{{this['name']}}</h3>
					{% if this.category_array[0] %}
						<i class="fas fa-tags me-1"></i>
						{% for category in this.category_array %}
							<a href="/events-list?category={{category}}" title="">{{context.exports.categories.items[category].name}}</a>
							{% if forloop.last == false %}, {% endif %}
						{% endfor %}
					{% endif %}
					<div class="mb-3 mt-3">{{this['Description'] }}</div>
					{% if this['Location - Address'] %}
						<h4 class="h6 mb-3 fw-bolder">Location</h4>
						<i class="fas fa-map-marked d-inline me-3 mb-3"></i><p class="mb-3 d-inline">{{this['Location - Address']}}</p>
					{% endif %}
					<div class="row align-items-center">
						<div class="col-12">
							<ul class="list-unstyled d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-flex-start mb-0 mt-3">
								<li class="d-flex flex-wrap align-items-center mb-3 mb-lg-0 me-lg-5">
									<div class="d-inline">
										<h4 class="h6 fw-bolder mb-0" data-date><i class="fas fa-calendar-day me-3"></i>{{this['Event Start'] | date: "%d/%m/%Y - %l %p"}}</h4>
									</div>
								</li>
								<li class="d-flex flex-wrap align-items-center mb-3 mb-lg-0 me-lg-5">
									<div class="d-inline">
										<h4 class="fw-bolder mb-0 h6" data-date><i class="fas fa-calendar-day me-3"></i>{{this['Event End'] | date: "%d/%m/%Y - %l %p"}}</h4>
									</div>
								</li>
								<li class="d-flex flex-wrap align-items-center mb-3 mb-lg-0">
									<div class="d-inline">
										<h4 class="fw-bolder mb-0 h6" data-date><i class="fas fa-user me-3"></i>
										{% capture author_layout %}{{layout}}/author{% endcapture %}
										{% include "modules/siteglide_authors/get/get_item_author", author_id: this.properties.module_field_12_4, author_layout: author_layout, author_layout_type: "detail" %}
										</h4>
									</div>
								</li>
							</ul>
						</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	{% if this.properties.module_field_12_8 %}
		<div class="col-md-4">
			<h4 class="h6 fw-bolder">Buy Tickets</h4>
			{% capture ticket_layout %}{{layout}}/ticket{% endcapture %}
			{% assign ticket_ids = this.properties.module_field_12_8 | join: "," -%}
			{%- include 'ecommerce/products', layout: ticket_layout, item_ids: ticket_ids, type: 'list', og_layout: _layout -%}
		</div>
	{% endif %}
</div>
{% endraw %}
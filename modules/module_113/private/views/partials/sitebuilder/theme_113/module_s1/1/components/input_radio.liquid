{%- raw -%}
<fieldset class="col-12  mb-3 radio-container {{validation}}">
  {% if options.size > 1 %}<legend class="col-form-label">{{label}}</legend>{% endif %}
  {% for option in options %}
    <div {{attributes}} class="form-check mb-6 align-items-center">
      <input  {% if value == option %}checked{% endif %} class="form-check-input" type="radio" name="{{name}}" id="{{name}}_{{option}}" value="{{option}}">
      <label class="form-check-label" for="{{name}}_{{option}}">{% if options.size > 1 %}{{option}}{% else %}{{label}}{% endif %}</label>
    </div>
  {% endfor %}
</fieldset>
{%- endraw -%}
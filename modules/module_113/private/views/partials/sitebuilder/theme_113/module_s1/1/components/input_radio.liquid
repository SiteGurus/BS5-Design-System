{%- raw -%}
<fieldset class="col-12  mb-5 radio-container {{validation}}">
  <legend class="col-form-label">{{label}}</legend>
  {% for option in options %}
    <div {{attributes}} class="form-check mb-6 align-items-center">
      <input  {% if value == option %}checked{% endif %} class="form-check-input" type="radio" name="{{name}}" id="{{name}}_{{option}}" value="{{option}}">
      <label class="form-check-label" for="{{name}}_{{option}}">{{option}}</label>
    </div>
  {% endfor %}
</fieldset>
{%- endraw -%}
{%- raw -%}
<div class="swiper-slide">
  <div class="w-100 h-100" style="background-image: url('{{ this['Image'] | asset_url }}'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="py-5 container text-white d-flex flex-column align-items-center justify-content-center">
      {% if this['Title'] != blank %}<h1 class="text-white text-center mb-3">{{ this['Title'] }}</h1>{% endif %}
      {% if this['Description'] != blank %}
        <div class="row w-100 mb-4">
          <div class="col col-md-2"></div>
          <div class="col-auto col-md-8">
            <div class="h5 text-center d-flex justify-content-center align-items-center">{{ this['Description'] | html_safe}}</div>
          </div>
          <div class="col col-md-2"></div>
        </div>
        
      {% endif %}
      {% if this['Button Name'] != blank or this['Button Link'] != blank %}
        <div class="mb-3">
          <a href="{{this['Button Link']}}" class="btn btn-primary">
            <span>{{this['Button Name']}}</span>
            <svg style="width: 1rem; height: 1rem;" class="ms-2 -me-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endraw %}
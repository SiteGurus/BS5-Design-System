{% raw %}
<div class="col mb-5 mb-lg-3">
	<div class="card sg-card border-0  h-100">
		<div class="card-img sg-card-img">
			<a href="/{{this['module_slug']}}/{{this['slug']}}">
				<img class="w-100" src="{{this['List Image'] | asset_url}}" alt="{{this.name}}" width="416">
			</a>
		</div>
		<div class="card-body sg-card-body">
			<h3><a href="/{{this['module_slug']}}/{{this['slug']}}">{{this.name}}</a></h3>
			<p>{{this['Description']}}</p>
			<p><i class="fas fa-pen-alt fa-fw me-1"></i>
				{% capture author_layout %}{{layout}}/author{% endcapture %}
				{%- include 'modules/siteglide_authors/get/get_item_author', author_layout: author_layout, author_layout_type: 'list', author_id: this['Author'] -%}
			</p>
			<p><i class="fas fa-calendar-day fa-fw me-2"></i>{{this['release_date'] | date: "%d %B %Y"}}</p>
			<p><i class="fas fa-tags fa-fw me-2"></i>{% for category in this.category_array %}<a href="/blog?category={{category}}">{{context.exports.categories.items[category].name}}</a>{%- unless forloop.last %}, {% endunless -%}{% endfor %}</p>
		</div>
	</div>
</div>
{% endraw %}
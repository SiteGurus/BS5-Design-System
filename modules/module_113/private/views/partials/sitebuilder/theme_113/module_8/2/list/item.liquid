{% raw %}
{% assign even = forloop.first | modulo: 2 %}
<div class="row align-items-center {% if even %}row-reverse{% endif %}">
  <div class="col-12 col-lg-4">
    {% if forloop.first %}
      <h2 class="text-center text-lg-left">Lorum ipsum dolor sit:</h2>
    {% endif %}
  </div>
  <div class="col-12 col-lg-7 offset-lg-1">
    <div class="row align-items-center">
      <div class="col-12 col-lg-8 mb-5 mb-lg-0">
        <img class="rounded-3 mw-100" src="{{ this['Image'] | asset_url }}" alt="{{this['name']}}">
      </div>
      <div class="col-12 col-lg-4 text-center text-lg-left">
        <h3>{{this['Company Name']}}</h3>
        <blockquote>“{{this['Quote']}}”</blockquote>
        <cite>- {{this['name']}} - {{this['Job Title']}}</cite>
      </div>
    </div>
  </div>
</div>

{% endraw %}
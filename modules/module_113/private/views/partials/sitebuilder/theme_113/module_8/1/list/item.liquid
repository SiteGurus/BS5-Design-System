{% raw %}
<div class="row align-items-center mb-3">
  <div class="col-12 col-lg-8 offset-lg-2">
    <div class="row">
      <div class="col-12 col-lg-8 mb-5 mb-lg-0 d-flex flex-column justify-content-center align-items-start">
        <blockquote>{{ this['Quote'] }}</blockquote>
        <cite>{{ this['name'] }} - {{ this['Job Title'] }} at {{this['Company Name']}}</cite>
      </div>
      <div class="col-12 col-lg-4">
        <img class="rounded-3 mw-100" src="{{ this['Image'] | asset_url }}" alt="{{this['name']}}">
      </div>
    </div>
  </div>
</div>

{% endraw %}